{
    "version": 8,
    "configurePresets": [
        {
            "name": "debug",
            "generator": "Ninja",
            "binaryDir": "build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_FLAGS": "-g -fsanitize=address"
            }
        },
        {
            "name": "release",
            "inherits": ["debug"],
            "generator": "Ninja",
            "binaryDir": "build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS": "-O3 -DNDEBUG"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Debug",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "configurePreset": "release",
            "jobs": 4
        }
    ]
}
